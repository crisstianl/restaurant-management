<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingRight="@dimen/padding_micro" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="35"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/fragment_docs_list_adapter_doc_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:checked="true"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/fragment_docs_list_adapter_contact_name"
            style="@style/textLabelTitleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_docs_list_adapter_doc_state"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_docs_list_adapter_doc_id"
            style="@style/textLabelTitleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_docs_list_adapter_contact_name"
            android:layout_toRightOf="@id/fragment_docs_list_adapter_doc_state" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_docs_list_adapter_doc_creation_date"
            style="@style/textLabelTitleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_docs_list_adapter_doc_last_change_date"
            style="@style/textLabelTitleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_docs_list_adapter_doc_status"
        style="@style/textLabelTitleNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20" />

    <TextView
        android:id="@+id/fragment_docs_list_adapter_doc_total"
        style="@style/textLabelTitleNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="right" />

</LinearLayout>