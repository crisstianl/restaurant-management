<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="actionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/apptheme_action_bar_background</item>
        <item name="android:titleTextStyle">@style/textActionBar</item>
        <item name="android:subtitleTextStyle">@style/subtextActionBar</item>
    </style>

    <style name="appTheme.editTextStyle" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textColor">@color/text_normal</item>
    </style>
    
	<style name="checkboxStyle" parent="@android:style/Widget.Holo.Light.CompoundButton.CheckBox">        
        <item name="android:textAppearance">@style/textLabelTitleNormal</item>
        <item name="android:saveEnabled">false</item> 
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:minHeight">45dip</item>
        <item name="android:minWidth">100dip</item>
    </style>    

    <style name="textLabelTitle" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="textLabelTitleNormal" parent="@style/textLabelTitle">
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="textActionBar" parent="@style/textLabelTitle">
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:maxWidth">90dp</item>
    </style>
    
    <style name="subtextActionBar" parent="@style/textActionBar">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>
    
    <style name="textLabelDesc" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

</resources>